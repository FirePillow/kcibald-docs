{
  "openapi": "3.0.0",
  "info": {
    "description": "Kcibald API",
    "version": "0.0.1",
    "title": "Kcibald API",
    "contact": {
      "email": "help@kcibald.com"
    }
  },
  "tags": [
    {
      "name": "authorized",
      "description": "authorized call"
    },
    {
      "name": "stable",
      "description": "The api is stable and will likely not change"
    },
    {
      "name": "developing",
      "description": "The api is unstable and may change"
    },
    {
      "name": "listing",
      "description": ""
    }
  ],
  "x-tagGroups": [
    {
      "name": "feed",
      "tags": [
        "listing"
      ]
    },
    {
      "name": "development stage",
      "tags": [
        "stable",
        "developing"
      ]
    }
  ],
  "paths": {
    "/feed": {
      "get": {
        "tags": [
          "listing",
          "developing"
        ],
        "summary": "fetch feed",
        "description": "fetch new activities from all subscribed regions",
        "parameters": [
          {
            "in": "query",
            "name": "after",
            "description": "fetch activities after a post identified using an special id for paging",
            "schema": {
              "type": "string",
              "format": "hexadecimal",
              "minLength": "24",
              "maxLength": "24",
              "required": "false"
            }
          },
          {
            "in": "query",
            "name": "amount",
            "description": "maximum number of activities to return",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 50,
              "required": "false"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "fetch success",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "isSuccess": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "items": {
                        "$ref": "#/components/schemas/post"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "bad input parameter"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "post": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "why not to choice physics HL"
          },
          "post_id": {
            "type": "string",
            "required": "true",
            "example": "AXPYAOfpEi"
          },
          "comments": {
            "type": "array",
            "required": "true",
            "items": {
              "$ref": "#/components/schemas/comment"
            }
          }
        },
        "allOf": [
          {
            "$ref": "#/components/schemas/content_base"
          }
        ]
      },
      "user": {
        "type": "object",
        "properties": {
          "user_id": {
            "type": "string"
          },
          "user_name": {
            "type": "string",
            "maxLength": "50"
          },
          "signature": {
            "type": "string"
          },
          "avatar": {
            "$ref": "#/components/schemas/attachment"
          }
        },
        "example": {
          "user_id": "r8hpppZ6mK",
          "user_name": "james",
          "signature": "i love physics",
          "avatar": ""
        }
      },
      "comment": {
        "type": "object",
        "properties": {
          "replies": {
            "$ref": "#/components/schemas/comment"
          }
        },
        "allOf": [
          {
            "$ref": "#/components/schemas/content_base"
          },
          {
            "example": {
              "content": "this is good"
            }
          }
        ]
      },
      "content_base": {
        "properties": {
          "author": {
            "$ref": "#/components/schemas/user"
          },
          "create_time_stamp": {
            "$ref": "#/components/schemas/create_timestamp"
          },
          "update_time_stamp": {
            "$ref": "#/components/schemas/update_timestamp"
          },
          "content": {
            "type": "string",
            "example": "lalala"
          },
          "attachments": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/attachment"
            }
          }
        }
      },
      "attachment": {
        "type": "string",
        "example": "//usercontent.kcibald.com/something.jpeg"
      },
      "create_timestamp": {
        "type": "integer",
        "format": "int64",
        "example": "1554806142"
      },
      "update_timestamp": {
        "allOf": [
          {
            "$ref": "#/components/schemas/create_timestamp"
          }
        ],
        "example": "1554806142",
        "nullable": true
      }
    }
  }
}